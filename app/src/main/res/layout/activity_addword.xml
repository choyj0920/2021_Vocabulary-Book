<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="360dp"
    android:layout_height="350dp">

    <TableLayout
        android:layout_width="360dp"
        android:layout_height="350dp"

        android:stretchColumns="0,1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Word (eng)"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mean"
                android:textSize="20dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <EditText
                android:id="@+id/tv_addword_wordeng"
                android:layout_width="0dp"
                android:layout_height="250dp"
                android:layout_column="0"
                android:fontFamily="@font/bmhannapro"
                android:gravity="center"
                android:text="word"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/tv_addword_wordmean"
                android:layout_width="0dp"
                android:layout_height="250dp"
                android:layout_column="1"
                android:fontFamily="@font/bmhannapro"
                android:gravity="center"
                android:text="mean"
                android:textSize="25dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <Button
                android:id="@+id/btn_addword_selectwordbook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="단어장 선택" />

            <Button
                android:id="@+id/btn_addword_finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="단어 추가" />

        </TableRow>


    </TableLayout>
    <ProgressBar
        android:id="@+id/pb_addword"
        android:layout_width="98dp"
        android:layout_height="107dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>