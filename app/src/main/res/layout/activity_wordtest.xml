<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_wordtesttitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@color/cardview_shadow_end_color"
            android:fontFamily="@font/bmeuljiro10yearslater"
            android:text="Wordtest"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/tv_wordtestscore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:background="@color/cardview_shadow_end_color"
            android:fontFamily="@font/uhbeenamsoyoung"
            android:text="0/0"
            android:textSize="25dp" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:id="@+id/tv_wordtest_eng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/bmhannapro"
            android:text="TextView"
            android:textSize="40dp" />
    </FrameLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_wordtest_ans1"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_column="0"
                android:fontFamily="@font/uhbeebold"
                android:gravity="center"
                android:text="Ans1"
                android:maxLines="2"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/tv_wordtest_ans2"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_column="1"
                android:fontFamily="@font/uhbeebold"
                android:gravity="center"
                android:text="Ans2"
                android:textSize="25dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_wordtest_ans3"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_column="0"
                android:fontFamily="@font/uhbeebold"
                android:gravity="center"
                android:text="Ans3"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/tv_wordtest_ans4"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_column="1"
                android:fontFamily="@font/uhbeebold"
                android:gravity="center"
                android:text="Ans4"
                android:textSize="25dp" />


        </TableRow>


    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>